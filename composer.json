{
    "name": "synaq/plesk-hello",
    "description": "Simple Hello World Plesk Extension POC",
    "type": "library",
    "require-dev": {
        "plesk/pm-api-stubs": "^17.0",
        "phpunit/phpunit": "^4.8",
        "mockery/mockery": "^0.9.9"
    },
    "license": "BSD",
    "authors": [
        {
            "name": "willemv",
            "email": "willemv@synaq.com"
        }
    ],
    "require": {
        "synaq/http-client": "1.0"
    },
    "config": {
        "vendor-dir": "src/plib/vendor"
    },
    "autoload": {
        "classmap": ["src/plib/library/"],
        "psr-4": {
            "PleskExt\\SynaqPleskHello\\": "src/library/SynaqPleskHello"
        }
    },
    "autoload-dev": {
        "classmap": ["src/plib/library/"],
        "psr-4": {
            "PleskExt\\SynaqPleskHello\\Tests\\": "tests/",
            "PleskExt\\SynaqPleskHello\\": "src/library/SynaqPleskHello"
        }
    },
    "scripts": {
        "clean": "rm -rf dist",
        "build": [
            "@clean",
            "mkdir -p dist && zip -r dist/synaq-plesk-hello.zip composer.json composer.lock src/ -x '*vendor*'"
        ]
    }
}
